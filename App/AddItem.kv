#:import Factory kivy.factory.Factory
<AddItem>:
	id:"AddItem"
	BoxLayout:
		id:form
		orientation:'vertical'
		spacing:10
		padding_left:60
		padding: [50,50,50,50]
		BoxLayout:
			padding: [50,50,50,50]
			orientation: 'vertical'
			TextInput:
				id:item
				hint_text:'Item Name'
				multiline:False
				write_tab: False
				font_size: 28	
				on_text_validate:price.focus=True
			TextInput:
				id:price
				hint_text:'Price'
				multiline:False
				write_tab: False
				font_size: 28	
				on_text_validate:qtty.focus=True
			TextInput:
				id:qtty
				hint_text:'Quantity'
				multiline:False
				write_tab: False
				font_size: 28	
				on_text_validate:
					submit.focus=True
					root.submit_details(item.text,price.text,qtty.text)
			BoxLayout:
				orientation:'horizontal'
				padding: [10,10,10,10]
				Spinner:
					id:gst
					size: root.width/4,root.height/12	
					text: "GST Class"	
					values : app.gst
					size_hint: None, None
				Spinner:
					id:category
					size: root.width/4,root.height/12
					pos_hint:{'center_x': .8}
					text: "Category"	
					values : app.cat
					size_hint: None, None
			Button:
				id:submit
				text:"Submit"
				on_release:root.submit_details(item.text,price.text,qtty.text,gst.text,category.text)
			
			
	
			
			