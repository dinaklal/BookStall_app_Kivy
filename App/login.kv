


<Home>:
	GridLayout:
		cols:3
		BoxLayout:
			orientation: 'vertical'

			Label:
				text: "You are now connected - "+str(app.username)
				font_size: 20
			Button:
				text: "Logout"
				font_size: 24
				on_release: root.disconnect()
		BoxLayout:
			orientation: 'vertical'

			
			Button:
				backgroundcolor:[0,0,1,0]
				text: "Inventory"
				font_size: 24
				on_release: root.manager.current="AddItem"
			Button:
				backgroundcolor:[0,0,1,0]
				text: "Sale"
				font_size: 24
				on_release: root.disconnect()

<LoginError>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Password & UserName mismatch"
            font_size: 32
        Button:
            text: "Back"
            font_size: 24
            on_release: root.back()
<Login>:
	GridLayout:
		cols:2
		padding:[10,50,10,10]
		
		BoxLayout
			id: login_layout
			orientation: 'vertical'
			padding: [50,50,10,50]
			##center:self.parent.center
			spacing: 50

			Label:
				text: 'Welcome'
				font_size: 32

			BoxLayout:
				orientation: 'vertical'

				Label:
					text: 'Login'
					font_size: 18
					halign: 'left'
					text_size: root.width-20, 20

				TextInput:
					id: login
					multiline:False
					write_tab: False
					font_size: 28

			BoxLayout:
				orientation: 'vertical'
				Label:
					text: 'Password'
					halign: 'left'
					font_size: 18
					text_size: root.width-20, 20

				TextInput:
					id: password
					multiline:False
					write_tab: False
					password:True
					font_size: 28

			Button:
				text: 'Login'
				font_size: 24

				on_release: root.do_login(login.text, password.text)